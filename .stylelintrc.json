{
  "plugins": [
    "stylelint-prettier",
    "stylelint-scss",
    "stylelint-selector-bem-pattern"
  ],
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "prettier/prettier": true,
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "plugin/selector-bem-pattern": {
      "preset": "bem"
    }
  }
}